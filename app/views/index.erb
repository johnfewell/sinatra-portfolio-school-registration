<div id="wrapper">
  <div class="pure-menu custom-restricted-width">
      <span class="pure-menu-heading">Menu</span>

      <ul class="pure-menu-list">
          <li class="pure-menu-item"><a href="/" class="pure-menu-link">Home</a></li>
          <li class="pure-menu-item"><a href="/courses" class="pure-menu-link">All Courses</a></li>
          <li class="pure-menu-item"><a href="/instructors" class="pure-menu-link">All Instructors</a></li>
          <li class="pure-menu-item"><a href="/students" class="pure-menu-link">All Students</a></li>
          <li class="pure-menu-item"><a href="/logout" class="pure-menu-link">Logout</a></li>
      </ul>
  </div>

  <div id="main">
    <h1>School Registration</h1>
    <h2>Hello, <%= @user.name %></h2>

    <% if @user.courses.empty? %>
      <p>
      You are curerntly not registered for any classes. Sign up for some on the All Classes page.
      </p>
      <% else %>
      <h3>You are currently enrolled in:</h3>
      <table class="pure-table pure-table-bordered">
        <thead>
          <tr>
            <th>Title</th>
            <th>Instructor</th>
            <th>Start Date</th>
            <th>Semester</th>
            <th>Weeks</th>
            <th>Year</th>
          </tr>
      </thead>
      <tbody>
        <% @user.courses.each do |c| %>
        <tr>
          <td>
            <%= c.title %>
          </td>
          <td>
            <% if !c.instructor_id? %>
              <%= "Instructor Unassigned" %>
            <% else %>
              <%= c.instructor.name %>
            <% end %>
          </td>
          <td>
            <%= c.start_date %>
          </td>
          <td>
            <%= c.semester %>
          </td>
          <td>
            <%= c.weeks %>
          </td>
          <td>
            <%= c.year %>
          </td>
        </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>


  </div>
</div>
