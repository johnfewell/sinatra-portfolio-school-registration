<h1>Edit Instructor</h1>
<form action="/instructors/<%= @instructor.slug %>" method="POST" class="pure-form pure-form-aligned">
    <fieldset>
        <div class="pure-control-group">
            <label for="name">Name</label>
            <input name="instructor[name]" type="text"  value="<%= @instructor.name %>">
            <span class="pure-form-message-inline">This is a required field.</span>
        </div>

        <div class="pure-control-group">
             <label for="courses">Courses</label>
                 <% Course.all.each do |c|  %>
                 <label> <%= c.title %></label>
                 <input type="checkbox" name="instructor[course_ids][]" value="<%= c.id %>" <%= 'checked' if @instructor.courses.include?(c) %>>
             <% end %>
         </div>

      <div class="pure-controls">
        <input type="submit" class="button-submit pure-button" value="Edit Instructor" />
      </div>
  </fieldset>
</form>
